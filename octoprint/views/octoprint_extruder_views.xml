<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<!-- Form View -->
	<record id="octoprint_extruder_view_form" model="ir.ui.view">
		<field name="name">octoprint.extruder.view.form</field>
		<field name="model">octoprint.extruder</field>
		<field name="arch" type="xml">
			<form string="Extruder View">
				<sheet>
					<group>
						<group>
							<field name="x_offset" />
							<field name="y_offset" />
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<!-- List View -->
	<record id="octoprint_extruder_view_list" model="ir.ui.view">
		<field name="name">octoprint.extruder.view.list</field>
		<field name="model">octoprint.extruder</field>
		<field name="arch" type="xml">
			<tree string="Extruder List">
				<field name="x_offset" />
				<field name="y_offset" />
			</tree>
		</field>
	</record>

	<!-- Search View -->
	<record id="octoprint_extruder_view_search" model="ir.ui.view">
		<field name="name">octoprint.extruder.view.search</field>
		<field name="model">octoprint.extruder</field>
		<field name="arch" type="xml">
			<search string="Extruder Search">
				<field name="x_offset" />
				<field name="y_offset" />
			</search>
		</field>
	</record>

</odoo>