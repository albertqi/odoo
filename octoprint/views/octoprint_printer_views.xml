<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="octoprint_printer_view_form" model="ir.ui.view">
		<field name="name">octoprint.printer.view.form</field>
		<field name="model">octoprint.printer</field>
		<field name="arch" type="xml">
			<form string="Print View">
				<sheet>
					<h1>
						<field name="name" />
					</h1>
					<group>
						<group>
							<separator string="Printer Information" />
							<field name="name" />
							<field name="printer_id" />
							<field name="color" />
							<field name="model" />
							<field name="default" />
							<field name="current" />
							<field name="has_heated_bed" />
							<field name="has_heated_chamber" />
						</group>
						<!-- <group>
							<separator string="Printer Information" />
							<field name="owner_id" />
							<field name="owner_phone" widget='phone' />
							<field name="owner_email" widget='email' />
						</group> -->
					</group>
					<notebook>
						<page string="Printer Volume Information">
							<group>
								<group string="Printer volume">
									<field name="volume_form_factor" />
									<field name="volume_origin" />
									<field name="volume_width" />
									<field name="volume_height" />
									<field name="volume_depth" />
									<field name="volume_custom_box" />
								</group>
								<group attrs="{'invisible': [('volume_custom_box', '=', False)]}">
									<separator string="Custom box dimensions" />
									<field name="volume_custom_box_min_x" />
									<field name="volume_custom_box_max_x" />
									<field name="volume_custom_box_min_y" />
									<field name="volume_custom_box_max_y" />
									<field name="volume_custom_box_min_z" />
									<field name="volume_custom_box_max_z" />
								</group>	
							</group>
						</page>
						<page string="Axis Information">
							<group>
								<group>
									<separator string="Axis Speed" />
									<field name="axes_x_speed" />
									<field name="axes_y_speed" />
									<field name="axes_z_speed" />
									<field name="axes_e_speed" />
								</group>
								<group>
									<separator string="Axis Inversion" />
									<field name="axes_x_inverted" />
									<field name="axes_y_inverted" />
									<field name="axes_z_inverted" />
									<field name="axes_e_inverted" />
								</group>
							</group>
						</page>
						<page string="Extruder Information">
							<group>
								<field name="extruder_count"/>
								<field name="extruder_shared_nozzle"/>
								<field name="extruder_nozzle_diameter"/>
								<field name="extruder_nozzle_length"/>
							</group>
						</page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>


	<record id="octoprint_printer_view_list" model="ir.ui.view">
		<field name="name">octoprint.printer.view.list</field>
		<field name="model">octoprint.printer</field>
		<field name="arch" type="xml">
			<tree string="Printer List">
				<field name="name" />
				<field name="printer_id" />
				<field name="model" />
			</tree>
		</field>
	</record>

